.details>view {
    box-shadow: 0px 6rpx 10rpx 2px rgba(38, 98, 229, 0.3);
    padding: 30rpx;
    box-sizing: border-box;
    width: 90%;
    margin: 50rpx auto;
}
.title {
    font-size: 30rpx;
    text-align: center;
    margin-bottom: 30rpx;
}
.time {
    color: rgb(112, 112, 112);
    font-size: 24rpx;
    height: 70rpx;
    line-height: 70rpx;
}
.infos {
    font-size: 30rpx;
    color: #444;
    height: 70rpx;
    line-height: 70rpx;
    border-bottom: 1px dashed rgb(167, 167, 167);
}
.infos title {
    font-weight: bold;
    color: #222;
    margin-right: 50rpx;
}
.code {
    padding-bottom: 20rpx;
    text-align: center;
}
.loading {
    width: 500rpx;
    height: 500rpx;
}