	opacity: 0.5;
	border-radius: 0 0 100rpx 100rpx;
}
.label {
	display: flex;
	justify-content: space-around;
    align-items: center;
	line-height: 190rpx;
	background-color: #ccc;
	font-weight: bold;
}
.label view {
