.project {
    width: 90%;
    margin: 30rpx auto;
    box-shadow: 1px 1px 2px 1px rgba(0, 0, 0, 0.2);
    padding: 30rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
}
.title {
    padding: 15rpx 0;
}
.info {
    margin-bottom: 20rpx;
    font-size: 40rpx;
    font-weight: bold;
}
.title2 {
    padding: 20rpx 0;
    border-bottom: 1px solid #ccc;
}
.weui-cells_after-title {
    width: 250rpx;
}
.project2 {
    padding: 30rpx 30rpx;
    box-sizing: border-box;
}
.page-section {
    display: flex;
    padding: 30rpx 0;
    border-bottom: 1px solid #ccc;
    align-items: center;
}
.page-section-title {
    width: 140rpx;
}
.page-section2 {
    border: 0;
}
.btn-area {
    margin-top: 100rpx;
}
.mini-btn {
    border: 1px solid #ccc;
    margin-left: 20rpx;
}
.weui-cells_after-title  {
    margin-top: 0;
}
.weui-cell_input {
    padding: 20rpx;
    font-size: 30rpx;
}
.timeBox {
    display: flex;
}
.checkbox {
    width: 400rpx;
    height: 80rpx;
    margin: 0;
    padding: 0;
    padding-left: 20rpx;
}
.checkbox2,.weui-cells_checkbox {
    width: 400rpx;
    background-color: rgb(252, 252, 252);
    height: 80rpx;
}
